<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    app:cardElevation="3dp"
    android:padding="20dp"
    android:layout_margin="10dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:weightSum="6"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_custompayment_ImgFood"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="70dp"
            android:src="@drawable/custom_category"
            />

        <TextView
            android:id="@+id/txt_custompayment_NameFood"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Mon 1"
            android:layout_weight="3"
            android:layout_gravity="center"
            android:paddingLeft="7dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/txt_custompayment_Count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_gravity="center"
            android:text="15"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/txt_custompayment_Price"
            android:layout_toLeftOf="@id/txt_custompayment_Price"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/txt_custompayment_Price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.5"
            android:fontFamily="@font/muli_black"
            android:gravity="right"
            android:paddingRight="5dp"
            android:text="10000Ä‘"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/btn_payment_note"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="#F8F0A7"
            app:tint="#D080FB"
            android:visibility="visible"
            app:srcCompat="@android:drawable/stat_notify_chat" />

    </LinearLayout>

</androidx.cardview.widget.CardView>